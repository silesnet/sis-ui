<div class="px-4 py-4">
  <form>
    <div class="flex">
      <div class="flex justify-end w-1/12 mr-6">
      <LinkTo @route="network">
        <svg class="w-6 h-6 text-gray-400" fill="currentColor" viewBox="0 0 20 20" >
          <path d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd" fill-rule="evenodd"></path>
        </svg></LinkTo>
      </div>
      <div class="w-6/12 px-4">
        <label for="name" class="sr-only">Název</label>
        <div class="relative rounded-md shadow-sm">
          <Input id="name" @type="text" @value={{@changeset.name}} class="block w-full form-input sm:text-sm sm:leading-5" placeholder="Název" />
        </div>
      </div>
      <div class="w-4/12 ml-4">
        <span class="inline-flex rounded-md shadow-sm">
          <button {{on 'click' (fn this.submit @changeset)}} type="button" class="inline-flex items-center px-3 py-2 text-sm font-medium leading-4 text-gray-700 transition duration-150 ease-in-out bg-white border border-gray-300 rounded-md hover:text-gray-500 focus:outline-none focus:border-blue-300 focus:shadow-outline-blue active:text-gray-800 active:bg-gray-50">
            Uložit
          </button>
        </span>
      </div>
    </div>
  </form>
</div>
